
name := cyh
N := 100
l := 10

BEGIN :: types
r := ZR
g := G2
S := G1
u := G1
pk := G1
sk := G1
h := ZR
P := G2
END :: types

BEGIN :: precompute
h_z := H(M | L | u_z, ZR)
END :: precompute
#S := sk^(h + r)

BEGIN :: constant
P, g
END :: constant

BEGIN :: public
pk
END :: public

BEGIN :: signature
S, u
END :: signature

BEGIN :: message
h
END :: message

# different messages/sigs under different signers
message := N
# number of signers already in verify equation
public := one
signature := N

verify := { e((prod{y:=0, l} on (u_y * (pk_y^h_y))) , P) == e(S, g) }


# tested for Mac OS X only
# makefile was partially generated by the pymkfile.py script
CC=gcc
PYLIB=/opt/local/Library/Frameworks/Python.framework/Versions/3.3/lib/python3.3/config-3.3m/libpython3.3.a
PYINC=-I-I/opt/local/Library/Frameworks/Python.framework/Versions/3.3/include -I/opt/local/Library/Frameworks/Python.framework/Versions/3.3/include -I/opt/local/Library/Frameworks/Python.framework/Versions/3.3/include/python3.3m -I/opt/local/Library/Frameworks/Python.framework/Versions/3.3/include/python3.3m -I/usr/local/include
LIBS=-L/opt/local/Library/Frameworks/Python.framework/Versions/3.3/lib  -ldl  -framework CoreFoundation -lpbc -lgmp
OPTS=-DBUILD_PAIR -DBUILD_PBC -DNDEBUG -g -fwrapv -O3 -Wall -Wstrict-prototypes
PROGRAMS=test
OBJECTS=charm_embed_api.o test.o
all: $(PROGRAMS)

test: ${OBJECTS}
	${CC} ${OBJECTS} $(LIBS) $(PYLIB) -o test

charm_embed_api.o: charm_embed_api.c
	${CC} $(PYINC) $(OPTS) -c charm_embed_api.c

test.o: test.c
	${CC} test.c -c $(PYINC) $(OPTS)


clean:
	rm -f $(PROGRAMS) *.o *.pyc core
